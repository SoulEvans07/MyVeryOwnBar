<%- include('header', {title : title}) %>

    <body>
        <p id="header2" style="align: justify; font-size: 30px; padding: 40px 0px 0px 20px; color:white; background-color:#378bc1"><%= cocktail.name %></p>
        
        <form method="post">
            <div style="padding: 10px 20px 20px 20px">
                <img src="/imgs/<%= cocktail.img %>" alt="<%= cocktail.name %>" width=100 style="float:left"/>
                <div style="padding: 35px 0px 0px 10px;">
                    <textarea id="header4" rows="1" cols="30" style="font-size: 20px; float:left; resize:none"><%= cocktail.name %></textarea>
                </div>
            </div>
            
            <div style="padding: 20px; float: none; clear:both">
                <h4>Description</h4>
                <textarea rows="5" cols="100" style="margin: 0% 20% 0% 0%; align: left; resize: none;"><%= cocktail.descr %></textarea>
            </div>
            
            <div style="padding: 20px;">
                <h4>Recipe</h4>
                <textarea rows="5" cols="100" style="margin: 0% 20% 0% 0%; align: left; resize: none;"><%= cocktail.recipe %></textarea>
            </div>
        

            <div style="padding: 20px; float:none">
                <h4>Ingredients</h4>
                <div class="list-group">
                    <% ingredients.forEach(function (ingr) { %>
                        <a class="list-group-item" style="height:120px">
                            <img src="/imgs/<%= ingr.img %>" alt="<%= ingr.name %>" width=100 style="float:left"/>
                            <h4 class="list-group-item-heading" style="float:left; padding: 40px 0px 0px 10px;"><%= ingr.name %></h4>
                            <input type="checkbox" name="<%= ingr.id %>"
                                    <%= cocktail.ingrs.indexOf(ingr.id) != -1 ? 'checked' : null %>
                                    style=" padding: 50px 50px 50px 50px; float:right;"/>
                        </a>
                    <% }) %>
                </div>
            </div>

            <div class="btn-group btn-group-justified" role="group" style="padding: 0px 20px 20px 20px">
                <div class="btn-group" role="group">
                    <button class="btn btn-info" OnClick="location.href='/cocktail/<%= cocktail.id %>' ">Save</button>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-info" OnClick="location.href='window.history.back()' ">Cancel</button>
                </div>
            </div>
        </form>
    </body>
</html>
