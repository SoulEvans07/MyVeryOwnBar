<%- include('header', {title : title}) %>

    <body>
        <p id="header2" style="align: justify; font-size: 30px; padding: 40px 0px 0px 20px; color:white; background-color:#378bc1"><%= ingredient.name %></p>
        
        <div style="padding: 10px 20px 20px 20px">
            <img src="<%= ingredient.img %>" alt="<%- ingredient.name %>" width="100px" height="100px" style="float:left"/>
            <div style="padding: 35px 0px 0px 10px;">
                <textarea placeholder="Name" form="save" name="name" id="header4" rows="1" cols="50" style="display: block; font-size: 20px; resize:none"><%- ingredient.name %></textarea>
                <textarea placeholder="Image URL" form="save" name="imgurl" rows="1" cols="50" style="display: block;font-size: 20px; resize:none"><%= ingredient.img %></textarea>
            </div>
        </div>

        <div style="padding: 20px; float: none; clear:both">
            <h4>Description</h4>
            <textarea form="save" name="description" rows="5" cols="100" style="margin: 0% 20% 0% 0%; align: left; resize: none;"><%- ingredient.descr %></textarea>
        </div>

        <form id="save" method="post">
            <input type="hidden" name="ingredientid" value="<%= ingredient._id %>">
            <div class="btn-group btn-group-justified" role="group" style="padding: 0px 20px 20px 20px">
                <div class="btn-group" role="group">
                    <button class="btn btn-info">Save</button>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-info" OnClick="window.history.back()">Cancel</button>
                </div>
            </div>
        </form>
    </body>
</html>
